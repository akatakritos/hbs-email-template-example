<html>
    <head>
        <style>
            body {
                font-size: 18px;
            }

            th {
                font-weight: bold;
            }

            li {
                margin-bottom: 8px;
            }

            .title {
                font-size: 24px;
                font-color: red;
            }
        </style>
    </head>
    <body>
        <table>
            <tr>
                <th>Name</th>
                <td>{{name}}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{zip}}</td>
            </tr>
        </table>

        <div class="title">Answers</div>

        <ul>
            {{#stuff}}
            <li>{{key}} - {{value}}</li>
            {{/stuff}}
        </ul>
    </body>
</html>